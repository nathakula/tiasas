// Prisma schema for TIASAS Market Desk

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum ConnectionProvider {
  PAPER
  ETRADE
  ROBINHOOD
  FIDELITY
  SCHWAB
}

enum ConnectionStatus {
  DISCONNECTED
  CONNECTED
}

// NextAuth base models (reused as User table)
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  memberships Membership[]
  journalEntries JournalEntry[]
  auditLogs AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Org + membership
model Org {
  id          String        @id @default(cuid())
  name        String
  memberships Membership[]
  journal     JournalEntry[]
  dailyPnl    DailyPnl[]
  connections Connection[]
  auditLogs   AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Membership {
  id        String  @id @default(cuid())
  userId    String
  orgId     String
  role      Role

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  org  Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, orgId])
}

// Domain models (all scoped by orgId)
model JournalEntry {
  id     String   @id @default(cuid())
  orgId  String
  userId String
  date   DateTime
  text   String
  tags   String[]

  org  Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyPnl {
  id           String  @id @default(cuid())
  orgId        String
  date         DateTime
  realizedPnl  Decimal @db.Decimal(20, 8)
  unrealizedPnl Decimal @db.Decimal(20, 8)
  note         String?

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([orgId, date])
}

model BenchmarkSnapshot {
  id     String   @id @default(cuid())
  date   DateTime
  symbol String
  price  Decimal  @db.Decimal(20, 8)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([symbol, date])
}

model Connection {
  id        String             @id @default(cuid())
  orgId     String
  provider  ConnectionProvider
  status    ConnectionStatus
  createdBy String

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id      String   @id @default(cuid())
  orgId   String
  userId  String?
  action  String
  entity  String
  entityId String
  before  Json?
  after   Json?
  at      DateTime @default(now())

  org  Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MonthlyNavEom {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  orgId     String
  date      DateTime @db.Date  // End-of-month date (e.g., 2025-04-30)
  nav       Decimal  @db.Decimal(20, 8)
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([orgId, date])
  @@map("MonthlyNav_eom")
}
